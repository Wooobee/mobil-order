<h1>Meine Daten</h1>

<%= render 'form' %>

<!-- Modal -->
<div id="drinkModal" class="modal hide fade hidden-phone" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Noch was zu trinken?</h3>
  </div>
  <div class="modal-body">
    <p>Bestellen Sie gleich noch was zu trinken</p>
			<%= link_to (image_tag('coke-flasche_klein.jpg', :height => 200)), list_path(:id => 9)%>
			<%= link_to "Getränk hinzufügen", list_path(:id => 9), :class => "btn btn-success"%>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Schließen</button>
  </div>
</div>

<% if not has_drinks%>
	<script>
		$('#drinkModal').modal({
			show: true,
			backdrop: false
		});
	</script>
<% end %>

