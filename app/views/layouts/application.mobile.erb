		    <div data-theme="" data-role="header">
		        <h3>
		            Bar Central
		        </h3>
		        <div data-role="navbar" data-iconpos="left">
		            <ul>
		                <li>
											<%= link_to 'Karte', home_path, :class => "ui-btn-active ui-state-persist"%>
		                
		                </li>
		                <li>
		                    <a href="#page1" data-transition="fade" data-theme="c" data-icon="star"
		                    class="ui-btn-active ui-state-persist">
		                        Warenkorb
		                    </a>
		                </li>
		            </ul>
		        </div>
		    </div>
    <div id="main" role="main">
      <div class="container">
		    <div data-role="content">
          <%= render 'layouts/messages' %>
          <%= yield %>
		    </div>
			    <div data-theme="a" data-role="footer">
			        <h3>
			            Footer
			        </h3>
			    </div>
       </div><!--! end of .container -->
      </div> <!--! end of #main -->
    </div> 
  </body>
</html>




    
